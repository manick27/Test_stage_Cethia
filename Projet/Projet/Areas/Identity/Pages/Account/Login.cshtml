@page
<div class="container" 
    style="margin-top: 3cm;
           margin-bottom: 0.5cm;
           border: 1px solid grey;
           width: 25%;
           background-color:white;
           border-radius: 10px;
           box-shadow: 10px 10px 50px grey">
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="row">
    <div class="">
        <section>
            <div style="margin: 5px; color: green; text-align: center">
                <i class="fa-solid fa-user fa-6x"></i>
            </div>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label" style="color: green">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-success">Log in</button>
                </div>
                <div style="font-size: 16px; display: flex">
                        <a id="forgot-password" asp-page="./ForgotPassword" style="text-decoration: none; color: green">Forgot your password?  </a> or 
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="text-decoration: none; color: green">Register as a new user</a>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</div>